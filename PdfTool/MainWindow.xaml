<Window x:Class="PdfTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfTool"
        mc:Ignorable="d"
        Title="PDF Comparative Renderer" Height="900" Width="1800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Padding="5">
            <!-- File Operations -->
            <Button x:Name="OpenButton" Content="Open PDF" Click="OpenButton_Click" Padding="10,5"/>
            <Separator/>

            <!-- Page Navigation -->
            <Button x:Name="PrevPageButton" Content="◀ Previous" Click="PrevPageButton_Click" Padding="10,5" IsEnabled="False"/>
            <TextBlock VerticalAlignment="Center" Margin="5,0">
                <Run Text="Page "/>
                <Run x:Name="CurrentPageText" Text="0"/>
                <Run Text=" of "/>
                <Run x:Name="TotalPagesText" Text="0"/>
            </TextBlock>
            <Button x:Name="NextPageButton" Content="Next ▶" Click="NextPageButton_Click" Padding="10,5" IsEnabled="False"/>
            <Separator/>

            <!-- Zoom Controls -->
            <Button x:Name="ZoomOutButton" Content="🔍−" Click="ZoomOut_Click" Padding="10,5" IsEnabled="False" ToolTip="Zoom Out (Ctrl+Mouse Wheel)"/>
            <Slider x:Name="ZoomSlider" Width="120" Minimum="0.25" Maximum="4.0" Value="1.0"
                    TickFrequency="0.25" IsSnapToTickEnabled="True" ValueChanged="ZoomSlider_ValueChanged"
                    VerticalAlignment="Center" IsEnabled="False" ToolTip="Zoom Level"/>
            <TextBlock VerticalAlignment="Center" Margin="5,0" MinWidth="45" TextAlignment="Right">
                <Run x:Name="ZoomText" Text="100"/>
                <Run Text="%"/>
            </TextBlock>
            <Button x:Name="ZoomInButton" Content="🔍+" Click="ZoomIn_Click" Padding="10,5" IsEnabled="False" ToolTip="Zoom In (Ctrl+Mouse Wheel)"/>
            <Separator/>
            <Button x:Name="FitToPageButton" Content="Fit Page" Click="FitToPage_Click" Padding="10,5" IsEnabled="False"/>
            <Button x:Name="FitToWidthButton" Content="Fit Width" Click="FitToWidth_Click" Padding="10,5" IsEnabled="False"/>
            <Button x:Name="ActualSizeButton" Content="100%" Click="ActualSize_Click" Padding="10,5" IsEnabled="False"/>
            <Separator/>

            <!-- Comparison Export -->
            <Button x:Name="CompareButton" Content="📷 Export Comparison" Click="CompareButton_Click" Padding="10,5" IsEnabled="False"/>
        </ToolBar>

        <!-- Three-panel layout -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PdfLibrary Panel -->
            <Border Grid.Column="0" BorderBrush="DarkGray" BorderThickness="1" Margin="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
                        <TextBlock Text="PdfLibrary" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" x:Name="PdfLibraryScroll"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                  ScrollChanged="PdfLibraryScroll_ScrollChanged">
                        <local:SkiaRenderer x:Name="PdfLibraryRenderer"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- PDFium Panel -->
            <Border Grid.Column="1" BorderBrush="DarkGray" BorderThickness="1" Margin="2,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
                        <TextBlock Text="PDFium" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" x:Name="PdfiumScroll"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                  ScrollChanged="PdfiumScroll_ScrollChanged">
                        <Grid x:Name="PdfiumPanel" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Image x:Name="PdfiumImage" Stretch="None"/>
                            <TextBlock x:Name="PdfiumError" Foreground="Red" Background="White"
                                       Padding="10" Visibility="Collapsed" TextWrapping="Wrap"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Melville Panel -->
            <Border Grid.Column="2" BorderBrush="DarkGray" BorderThickness="1" Margin="2,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
                        <TextBlock Text="Melville.Pdf" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" x:Name="MelvilleScroll"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                  ScrollChanged="MelvilleScroll_ScrollChanged">
                        <Grid x:Name="MelvillePanel" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Image x:Name="MelvilleImage" Stretch="None"/>
                            <TextBlock x:Name="MelvilleError" Foreground="Red" Background="White"
                                       Padding="10" Visibility="Collapsed" TextWrapping="Wrap"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
