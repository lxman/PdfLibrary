<Window x:Class="ImageUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageUtility"
        mc:Ignorable="d"
        Title="Image Utility - Viewer/Transcoder" Height="600" Width="900">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OpenFile_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save As..." Click="SaveAs_Click" InputGestureText="Ctrl+S" x:Name="SaveAsMenuItem"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Click="ZoomIn_Click" InputGestureText="Ctrl++"/>
                <MenuItem Header="Zoom _Out" Click="ZoomOut_Click" InputGestureText="Ctrl+-"/>
                <MenuItem Header="_Actual Size" Click="ActualSize_Click" InputGestureText="Ctrl+0"/>
                <MenuItem Header="_Fit to Window" Click="FitToWindow_Click" InputGestureText="Ctrl+F"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Codec Settings..." Click="CodecSettings_Click"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="ImageInfoText" Text=""/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="ZoomText" Text="100%"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Image Display Area -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="#FFE0E0E0">
                <Grid>
                    <Image x:Name="ImageDisplay"
                          Stretch="None"
                          RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
